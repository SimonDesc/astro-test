---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import PocketBase from 'pocketbase';

let users: any[] = [];
try {
    // Create PocketBase instance with fetch polyfill
    const pb = new PocketBase('http://pocketbase-mw8k8ss008ooo80wwss000wc.92.113.26.165.sslip.io');
    
    // Fetch data
    users = await pb.collection('users').getFullList({
        sort: '-created',
    });
    
    console.log('Users fetched:', users);
} catch (error) {
    console.error('Error fetching users:', error);
}
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main>
            <h1>üßë‚ÄçüöÄ Hello, Astronaut!</h1>
            <h2>User List</h2>
            
            <!-- Add client-side debugging -->
            <div id="debug"></div>
            
            <ul>
                {users.length > 0 ? (
                    users.map((user) => (
                        <li>
                            <h3>{user.name}</h3>
                            <p>ID: {user.id}</p>
                        </li>
                    ))
                ) : (
                    <li>No users found</li>
                )}
            </ul>
        </main>
        <Footer />

        <script>
            // Client-side debugging
            console.log('Client-side script loaded');
            document.getElementById('debug').textContent = 'Script loaded at: ' + new Date().toISOString();
        </script>
    </body>
</html>
